<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_manhinhchinh"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#8D8D98">

        <TextView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="Food order"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"/>

        <RelativeLayout
            android:id="@+id/btnGiohang"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/b"
            android:layout_gravity="right"
            android:layout_marginRight="30dp">

            <TextView
                android:id="@+id/tvSoLuong"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/vien_giohang"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvTenKh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:textColor="#2548CA"/>

    <ListView
        android:id="@+id/lvFood"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/vien_list"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="Total Price"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:textSize="25dp"
            android:layout_gravity="top|left"/>

        <TextView
            android:id="@+id/tvTongTien"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="0"
            android:textSize="25dp"
            android:gravity="right|top"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="$"
            android:textSize="25dp"
            android:layout_gravity="top|left"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order"
        android:textSize="25dp"
        android:textColor="#FBFBFB"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#0340BA"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/tvThank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#AC0707"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:text="Thank you! Your order is sent to restaurant!"/>
</LinearLayout>